				</condition>
				<condition name="true">
					<node name="conditions">
						<condition name="skillRange" skillIdx="6">
							<node name="select" prob="30,30,15,25">
								<!--사정거리 250 이내에 있으면-->
								<node name="skill" faceTarget="0" idx="6">
