									<node name="standby" limit="1000" faceTarget="1" />
								</node>
							</node>
						</condition>
						<condition name="true">
							<node name="conditions">
								<condition name="skillRange" skillIdx="4">
									<node name="select" prob="30,30,40">
										<!--사정거리 600 이내에 있으면-->
										<node name="skill" faceTarget="0" idx="4">
											<!--점프쾅!~-->
											<node name="standby" limit="1000" faceTarget="1" />
										</node>
										<node name="skill" faceTarget="0" idx="5">
											<!--브레스 공격-->
											<node name="standby" limit="1000" faceTarget="1" />
										</node>
										<node name="trace" limit="1500" skillIdx="6" />
										<!--거리 250까지 쫓아가기-->
									</node>
								</condition>
								<condition name="true">
									<!--사정거리 1500 이내에 있으면-->
									<node name="conditions">
										<condition name="skillRange" skillIdx="2">
											<node name="select" prob="35,65">
												<node name="skill" faceTarget="0" idx="3">
													<!-- 바위 던지기-->
													<node name="standby" limit="1000" faceTarget="1" />
												</node>
												<node name="skill" faceTarget="0" initialCooltime="11000" idx="2">
													<!-- 입김 당기기-->
													<node name="standby" limit="1000" faceTarget="1" />
												</node>
											</node>
										</condition>
										<condition name="true">
											<node name="select" prob="40,60">
												<node name="skill" idx="8" />
												<!--Attack_Idle_A-->
												<node name="standby" limit="1000" faceTarget="1" />
											</node>
										</condition>
									</node>
								</condition>
							</node>
						</condition>
					</node>
