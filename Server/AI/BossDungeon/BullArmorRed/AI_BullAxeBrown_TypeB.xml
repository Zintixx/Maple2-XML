<?xml version="1.0" encoding="utf-8"?>
<npcAi>
	<!--전투-->
	<battle>
		<node name="select" prob="9999,0">
			<!--타겟팅을 일정 시간마다  다시 renew 해주는 부분 -->
			<node name="standby" limit="10" faceTarget="1" cooltime="9000">
				<node name="target" type="rand" from="10" to="1300" />
			</node>
			<node name="conditions">
				<condition name="skillRange" skillIdx="1">
					<node name="select" prob="50,50,1">
						<!--거리 250 이내-->
						<node name="skill" cooltime="6000" idx="1">
							<!--근거리 1타 -->
							<node name="standby" limit="2500" faceTarget="1" />
						</node>
						<node name="skill" cooltime="6000" idx="3">
							<!--회전공격 -->
							<node name="standby" limit="2500" faceTarget="1" />
						</node>
						<node name="standby" limit="1000" faceTarget="1" />
					</node>
				</condition>
				<condition name="true">
					<node name="conditions">
						<condition name="skillRange" skillIdx="2">
							<node name="select" prob="80,20,1">
								<!--거리 600 이내-->
								<node name="skill" cooltime="8000" idx="4">
									<!--돌진공격-->
									<node name="standby" limit="2500" faceTarget="1" />
								</node>
								<node name="skill" cooltime="18000" idx="2">
									<!--점프쾅 -->
									<node name="standby" limit="2500" faceTarget="1" />
								</node>
								<node name="standby" limit="1000" faceTarget="1" />
							</node>
						</condition>
						<condition name="true">
							<node name="conditions">
								<condition name="skillRange" skillIdx="4">
									<node name="select" prob="99,1">
										<!--거리 900 이내-->
										<node name="skill" idx="4">
											<!--돌진공격-->
											<node name="standby" limit="2500" faceTarget="1" />
										</node>
										<node name="standby" limit="1000" faceTarget="1" />
									</node>
								</condition>
								<condition name="true">
									<node name="trace" limit="4000" skillIdx="4" />
								</condition>
							</node>
						</condition>
					</node>
				</condition>
			</node>
		</node>
	</battle>
</npcAi>