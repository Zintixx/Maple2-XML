<?xml version="1.0" encoding="utf-8"?>
<npcAi>
	<!--전투-->
	<battle>
		<node name="select" prob="9999,0">
			<!--타겟팅을 일정 시간마다  다시 renew 해주는 부분 -->
			<node name="standby" limit="200" faceTarget="1" cooltime="3000">
				<node name="target" type="near" from="10" to="2600" />
				<!--제일 가까운 대상 타겟팅 잡기 -->
			</node>
			<node name="conditions">
				<condition name="skillRange" skillIdx="1">
					<!--같은 높이에 있거 기준 거리 이내에 있으면-->
					<node name="conditions">
						<condition name="skillRange" skillIdx="2">
							<!--올려치기 사정거리에 있으면-->
							<node name="conditions">
								<condition name="skillRange" skillIdx="4">
									<node name="select" prob="50,50">
										<!--올려치기 사정거리에 있고 바닥 치기 사정거리에 있으면-->
										<node name="skill" idx="4">
											<!--바닥치기 공격-->
											<node name="standby" limit="2000" faceTarget="1" />
										</node>
										<node name="standby" limit="700" faceTarget="1">
											<node name="skill" idx="4">
												<!--바닥치기 공격-->
												<node name="standby" limit="1700" faceTarget="1" />
											</node>
										</node>
									</node>
								</condition>
								<condition name="true">
									<node name="select" prob="50,50">
										<node name="skill" idx="2">
											<!--올려치기 공격-->
											<node name="standby" limit="2000" faceTarget="1" />
										</node>
										<node name="standby" limit="700" faceTarget="1">
											<node name="skill" idx="2">
												<!--올려치기 공격-->
												<node name="standby" limit="1700" faceTarget="1" />
											</node>
										</node>
									</node>
								</condition>
							</node>
						</condition>
						<condition name="true">
							<node name="conditions">
								<condition name="hpOver" value="95">
									<!--전투 초반 들어서자마자 trace 실행하면 건너편 대상을 공격하기 위해 맵 구석에 파묻히는 문제가 있어서, HP가 어느정도 깍기면 추적 행동 하도록 함-->
									<node name="standby" limit="800" faceTarget="1" />
								</condition>
								<condition name="true">
									<node name="trace" limit="700" skillIdx="3" />
								</condition>
							</node>
						</condition>
					</node>
				</condition>
				<condition name="true">
					<!--같은 높이 전투판에 있지 않으면  서있기-->
					<node name="standby" limit="900" faceTarget="1" />
				</condition>
			</node>
		</node>
	</battle>
</npcAi>