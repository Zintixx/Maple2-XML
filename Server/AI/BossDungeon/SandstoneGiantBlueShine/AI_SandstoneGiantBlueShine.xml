				<node name="SetValue" key="SummonDeath" value="0" />
				<!--CheckSummonMany  소환몹이 죽이기 위한 변수 설정-->
				<node name="SetValue" key="BuffOnOff" value="0" />
				<!--소환몹이 등장하거 전부 죽을때 특수 행동 처리하기 위한 변수-->
				<node name="SetValue" key="PatternStep" value="0" />
