<?xml version="1.0" encoding="utf-8"?>
<npcAi>
	<!--전투-->
	<battle>
		<node name="select" prob="9999,9999,9999,9999,0">
			<node name="SetValue" cooltime="9999999" key="EnterBattleCenter" value="0" />
			<node name="SetValue" cooltime="9999999" key="BattleMode" value="0" />
			<node name="SetValue" cooltime="9999999" key="DefenceDownAttack" value="0" />
			<!-- 방어력 저하 디버프 공격을 행하는데 사용되는 변수-->
			<node name="buff" type="add" id="50001104" cooltime="999999" />
			<!-- 타겟팅 예외 버프 부여하기-->
			<node name="conditions">
				<condition name="extraData" key="SummonDeath" value="1">
					<!-- 소환 본체가 자살 명령 내리면-->
					<node name="skill" idx="9" />
					<!-- 자살 스킬 사용하기-->
				</condition>
				<condition name="extraData" key="BattleMode" value="1">
					<!-- 이 변수가 1이되면 통상적인 공격 행동을 함-->
					<aiPreset name="MainBattle" />
				</condition>
				<condition name="extraData" key="EnterBattleCenter" value="1" op="greaterEqual">
					<node name="select" prob="999,1">
						<!-- 보스한테 EnterBattleCenter 변수 할당 받으면 해당 층으로 저프 뛴 다음 통상적인 공격 행위를 함-->
						<node name="standby" limit="100" faceTarget="0" animation="Idle_A" cooltime="9999999">
							<node name="select" prob="50,50">
								<node name="standby" limit="100" faceTarget="0" animation="Idle_A">
									<!--50%확률로 점프 뛰기-->
									<node name="SetValue" key="BattleMode" value="1">
										<node name="SetMasterValue" key="MonsterNumber" value="1" isModify="1">
											<node name="select" prob="33,33,33">
												<!--몬스터가 추가되었기 때문에 보스의 MonsterNumber 이 변수에 1 더함, 이 변수가 0이 되어야 다음 스테이지로 넘어가는 구조임-->
												<node name="standby" limit="300" faceTarget="0" animation="Idle_A">
													<aiPreset name="JumpMove" />
												</node>
												<node name="standby" limit="1500" faceTarget="0" animation="Idle_A">
													<aiPreset name="JumpMove" />
												</node>
												<node name="standby" limit="3100" faceTarget="0" animation="Idle_A">
													<aiPreset name="JumpMove" />
												</node>
											</node>
										</node>
									</node>
								</node>
								<node name="standby" limit="1000" faceTarget="0" animation="Idle_A" />
								<!--50%확률로 점프 안뛰고 가만히 있기-->
							</node>
						</node>
						<node name="standby" limit="2000" faceTarget="0" animation="Idle_A" />
					</node>
				</condition>
				<condition name="true">
					<node name="standby" limit="2000" faceTarget="1" animation="Idle_A" />
				</condition>
			</node>
		</node>
	</battle>
	<battleEnd onlyDead="true">
		<node name="SetMasterValue" key="MonsterNumber" value="-1" isModify="1" />
	</battleEnd>
	<aiPresets>
		<aiPreset name="JumpMove">
			<!--건너편 지형에서 전투 판으로 점프 뛰는 상황-->
			<node name="conditions">
				<condition name="extraData" key="EnterBattleCenter" value="1" op="greaterEqual">
					<node name="select" prob="12,12,12,12,12,12,12,12,12">
						<!--보스가 석상기사한테 보스 전투판으로 뛰라고 신호 받으면-->
						<!--보스 전투판  중앙 지점-->
						<node name="skill" facePos="4050, 4050, 5300" isKeepBattle="true" idx="6">
							<!--점프 도약 -->
							<node name="jump" pos="4050, 4050, 5300" speed="1500" heightMultiplier="0.7" />
							<node name="skill" faceTarget="0" idx="7" />
							<!--착지 -->
						</node>
						<node name="skill" facePos="4350, 4050, 5300" isKeepBattle="true" idx="6">
							<!--점프 도약 -->
							<node name="jump" pos="4350, 4050, 5300" speed="1500" heightMultiplier="0.7" />
							<node name="skill" faceTarget="0" idx="7" />
							<!--착지 -->
						</node>
						<node name="skill" facePos="4050, 4350, 5300" isKeepBattle="true" idx="6">
							<!--점프 도약 -->
							<node name="jump" pos="4050, 4350, 5300" speed="1500" heightMultiplier="0.7" />
							<node name="skill" faceTarget="0" idx="7" />
							<!--착지 -->
						</node>
						<node name="skill" facePos="3750, 4350, 5300" isKeepBattle="true" idx="6">
							<!--점프 도약 -->
							<node name="jump" pos="3750, 4350, 5300" speed="1500" heightMultiplier="0.7" />
							<node name="skill" faceTarget="0" idx="7" />
							<!--착지 -->
						</node>
						<node name="skill" facePos="4350, 3750, 5300" isKeepBattle="true" idx="6">
							<!--점프 도약 -->
							<node name="jump" pos="4350, 3750, 5300" speed="1500" heightMultiplier="0.7" />
							<node name="skill" faceTarget="0" idx="7" />
							<!--착지 -->
						</node>
						<node name="skill" facePos="4650, 3900, 5300" isKeepBattle="true" idx="6">
							<!--점프 도약 -->
							<node name="jump" pos="4650, 3900, 5300" speed="1500" heightMultiplier="0.7" />
							<node name="skill" faceTarget="0" idx="7" />
							<!--착지 -->
						</node>
						<node name="skill" facePos="3900, 4650, 5300" isKeepBattle="true" idx="6">
							<!--점프 도약 -->
							<node name="jump" pos="3900, 4650, 5300" speed="1500" heightMultiplier="0.7" />
							<node name="skill" faceTarget="0" idx="7" />
							<!--착지 -->
						</node>
						<node name="skill" facePos="3600, 4200, 5300" isKeepBattle="true" idx="6">
							<!--점프 도약 -->
							<node name="jump" pos="3600, 4200, 5300" speed="1500" heightMultiplier="0.7" />
							<node name="skill" faceTarget="0" idx="7" />
							<!--착지 -->
						</node>
						<node name="skill" facePos="4050, 3600, 5300" isKeepBattle="true" idx="6">
							<!--점프 도약 -->
							<node name="jump" pos="4050, 3600, 5300" speed="1500" heightMultiplier="0.7" />
							<node name="skill" faceTarget="0" idx="7" />
							<!--착지 -->
						</node>
					</node>
				</condition>
				<condition name="true">
					<node name="standby" limit="2000" faceTarget="1" />
				</condition>
			</node>
		</aiPreset>
		<aiPreset name="MainBattle">
			<node name="select" prob="9999,9999,0">
				<!--주 전투 행위-->
				<node name="target" type="near" from="10" to="1200" cooltime="8000" />
				<node name="buff" type="remove" id="50001104" cooltime="999999" />
				<!--전투에 돌입하면 타겟팅 예외 버프 제거하기-->
				<node name="conditions">
					<condition name="extraData" key="DefenceDownAttack" value="1">
						<node name="conditions">
							<condition name="skillRange" skillIdx="3">
								<!--거리 450 이내로 들어오면-->
								<node name="skill" idx="5">
									<!--저주 공격 멈추기-->
									<node name="SetValue" key="DefenceDownAttack" value="0" />
								</node>
							</condition>
							<condition name="true">
								<node name="skill" idx="4" />
								<!--저주 공격 발동-->
							</condition>
						</node>
					</condition>
					<condition name="skillRange" skillIdx="8">
						<!--거리 900~1000 이내 -->
						<node name="conditions">
							<condition name="skillRange" skillIdx="1">
								<node name="select" prob="70,30">
									<!--거리 170 이내 -->
									<node name="skill" idx="1">
										<!--근접 검 휘두르기 -->
										<node name="standby" limit="1800" faceTarget="1" />
									</node>
									<node name="skill" cooltime="27000" idx="2">
										<!--돌진 찌르기-->
										<node name="standby" limit="2500" faceTarget="1" />
									</node>
								</node>
							</condition>
							<condition name="true">
								<node name="conditions">
									<condition name="skillRange" skillIdx="2">
										<node name="select" prob="45,55">
											<!--거리 600 이내 -->
											<node name="trace" limit="5000" skillIdx="1" />
											<!--거리 170  이내 -->
											<node name="skill" cooltime="16000" idx="2">
												<!--돌진 찌르기-->
												<node name="standby" limit="2500" faceTarget="1" />
											</node>
										</node>
									</condition>
									<condition name="true">
										<node name="select" prob="80,20">
											<node name="skill" idx="3">
												<!--저주 디버프 걸기-->
												<node name="SetValue" key="DefenceDownAttack" value="1" />
											</node>
											<node name="trace" limit="3000" cooltime="9000" skillIdx="2" />
											<!--거리 600  이내 -->
										</node>
									</condition>
								</node>
							</condition>
						</node>
					</condition>
					<condition name="true">
						<node name="select" prob="70,30">
							<node name="trace" limit="600" skillIdx="4">
								<!--저주 디버프 사용 전에 약간 앞으로 이동하기, 레벨 12의 1300~1500 거리 데이터를 사용힘-->
								<node name="skill" faceTarget="1" idx="3">
									<!--저주 디버프 걸기-->
									<node name="SetValue" key="DefenceDownAttack" value="1" />
								</node>
							</node>
							<node name="standby" limit="500" faceTarget="1" />
						</node>
					</condition>
				</node>
			</node>
		</aiPreset>
	</aiPresets>
</npcAi>