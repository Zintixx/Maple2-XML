<?xml version="1.0" encoding="utf-8"?>
<npcAi>
	<!--전투-->
	<battle>
		<node name="select" prob="99999,9999,0">
			<node name="SetValue" cooltime="999999" key="CloseRange" value="0" />
			<!--원거리 몬스터에게 가까이 다가가면 이후 쫓아오는 행동을 하도록 하기 위해 이 변수 필요 -->
			<!--타겟팅을 일정 시간마다  다시 renew 해주는 부분 -->
			<node name="standby" limit="10" faceTarget="1" cooltime="4000">
				<node name="target" type="near" from="10" to="1300" />
			</node>
			<!--냉기 보호막 버프 부여하기    , 이 기능 제거하기
		<buff type ="add" id = "50004502" level="5" prob="9999" cooltime = "8000"/>  -->
			<node name="conditions">
				<condition name="extraData" key="SummonDeath" value="1">
					<!-- 소환 본체가 자살 명령 내리면-->
					<node name="skill" idx="7" />
					<!-- 자살 스킬 사용하기-->
				</condition>
				<condition name="true">
					<node name="conditions">
						<condition name="skillRange" skillIdx="1">
							<!--같은 영역의 전투판 내에 있어야만 전투 행위를 하도록 함-->
							<node name="conditions">
								<condition name="extraData" key="CloseRange" value="0">
									<aiPreset name="LongRangeMode" />
								</condition>
								<condition name="true">
									<!--CloseRange = 1 인 경우임 -->
									<aiPreset name="CloseRangeMode" />
								</condition>
							</node>
						</condition>
						<condition name="true">
							<node name="standby" limit="800" faceTarget="1">
								<node name="target" type="near" from="10" to="1300" />
							</node>
						</condition>
					</node>
				</condition>
			</node>
		</node>
	</battle>
	<battleEnd onlyDead="true">
		<node name="SetMasterValue" key="MonsterNumber" value="-1" isModify="1" />
	</battleEnd>
	<aiPresets>
		<!--원거리 전용 움직임-->
		<aiPreset name="LongRangeMode">
			<node name="conditions">
				<condition name="skillRange" skillIdx="3">
					<!--레벨1: 거리 400 이내 -->
					<node name="SetValue" key="CloseRange" value="1" />
					<!--플레이어가 가까이 붙으면 이 변수 1로 만들어 이후 무조건 가끼이 붙으려고 함 -->
				</condition>
				<condition name="true">
					<node name="conditions">
						<condition name="skillRange" skillIdx="4">
							<node name="select" prob="99,1">
								<!--레벨2: 거리 1150 이내 -->
								<node name="skill" faceTarget="1" cooltime="8000" isKeepBattle="true" idx="3">
									<!--원거리 방패 돌진 공격 -->
									<node name="skill" faceTarget="0" idx="6" />
									<!--레벨22가 돌진 직전 대기, 레벨2는 디버프 방패 막기임 -->
									<node name="skill" faceTarget="1" idx="6" />
									<node name="skill" faceTarget="0" idx="5" />
								</node>
								<node name="standby" limit="500" faceTarget="1" />
								<!--플레이가 가까이 붙으면 바로바로 추척하도록 하기 위해 모든 스킬에 쿨타임 넣고 standby 시간 짧게 함 -->
							</node>
						</condition>
						<condition name="true">
							<node name="trace" limit="5000" skillIdx="4" />
							<!--레벨2: 거리 1150 이내 -->
						</condition>
					</node>
				</condition>
			</node>
		</aiPreset>
		<!--근거리 전용 움직임-->
		<aiPreset name="CloseRangeMode">
			<node name="conditions">
				<condition name="skillRange" skillIdx="2">
					<node name="select" prob="99,1">
						<!--레벨1: 거리 250 이내 -->
						<node name="skill" cooltime="4000" idx="2" />
						<!--방패치기 공격 -->
						<node name="standby" limit="500" faceTarget="1" />
						<!--플레이가 가까이 붙으면 바로바로 추척하도록 하기 위해 모든 스킬에 쿨타임 넣고 standby 시간 짧게 함 -->
					</node>
				</condition>
				<condition name="true">
					<node name="trace" limit="5000" skillIdx="2" />
					<!--레벨1: 거리 250 이내 쫓아가기 -->
				</condition>
			</node>
		</aiPreset>
	</aiPresets>
</npcAi>