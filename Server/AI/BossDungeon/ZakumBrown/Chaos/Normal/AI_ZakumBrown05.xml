				</condition>
				<condition name="extraData" key="ElementsDecision05" value="5">
					<node name="buff" type="add" id="50006004" level="1">
						<!-- 암흑 속성 보호 생성 -->
						<node name="SetValue" key="ElementsDecision05" value="0" />
