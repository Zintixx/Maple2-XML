						</node>
						<node name="standby" limit="1990" faceTarget="1">
							<node name="skill" idx="2">
								<node name="standby" limit="5300" faceTarget="1" />
							</node>
						</node>
					</node>
				</condition>
				<condition name="true">
					<node name="standby" limit="500" faceTarget="1">
						<node name="target" type="rand" from="10" to="2400" />
					</node>
				</condition>
			</node>
		</node>
	</battle>
