					<node name="select" prob="33,33,34">
						<!--근거리 몸통돌진 공격-->
						<node name="skill" idx="1">
							<node name="standby" limit="5200" faceTarget="1" />
						</node>
						<node name="standby" limit="2260" faceTarget="1">
							<node name="skill" idx="1">
								<node name="standby" limit="3800" faceTarget="1" />
							</node>
						</node>
						<node name="standby" limit="1490" faceTarget="1">
							<node name="skill" idx="1">
								<node name="standby" limit="4200" faceTarget="1" />
							</node>
						</node>
					</node>
				</condition>
				<condition name="skillRange" skillIdx="2">
					<node name="select" prob="33,33,34">
						<!--원거리 공격-->
						<node name="skill" idx="2">
							<node name="standby" limit="7800" faceTarget="1" />
